class Solution {
    public int solution(int[] arr) {
        // 두 수의 최소 공배수를 구한 뒤 담는 변수
        int previousLCM = 0;

        // 두 수의 최소 공배수를 구하고, 구한 최소 공배수와 다음 수의 최소 공배수를 구해 나간다.
        // 최대 공약수, 최소 공배수 공식 정도는 외워두자...
        for(int i = 1; i < arr.length; i++) {
            if(i == 1) {
                previousLCM = LCM(arr[i - 1], arr[i]); 
            } else {
                previousLCM = LCM(previousLCM, arr[i]);
            }
        }
        
        return previousLCM;
    }
    
    // 최대 공약수를 구하는 메소드
    public int GCD(int a, int b) {
        if(b == 0) {
            return a;
        } else {
            return GCD(b, a % b);
        }
    }
    
    // 최소 공배수를 구하는 메소드
    public int LCM(int a, int b) {
        int g = GCD(a, b);
        
        return g * (a / g) * (b / g);
    }
}
