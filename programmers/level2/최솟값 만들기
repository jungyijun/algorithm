import java.util.*;

class Solution {
    public int solution(int []A, int []B) {
        int answer = 0;
        ArrayList<Integer> arrayListA = new ArrayList<Integer>();
        ArrayList<Integer> arrayListB = new ArrayList<Integer>();
        
        // 주어진 A와 B를 ArrayList에 각각 담는다.
        for(int i = 0; i < A.length; i++) {
            arrayListA.add(A[i]);
            arrayListB.add(B[i]);
        }
        
        // 오름차순으로 정렬한다.
        Collections.sort(arrayListA);
        Collections.sort(arrayListB);
        
        // 큰 수와 작은 수끼리 곱하고 answer에 더해준다.
        for(int i = 0; i < arrayListA.size(); i++) {
            answer += arrayListA.get(i) * arrayListB.get((arrayListB.size() - i) - 1);
        }
        
        return answer;
    }
}
