import java.util.*;

class Solution {
    public int solution(int[] people, int limit) {
        Arrays.sort(people);
        int answer = 0;
        int min = 0;
        
        for(int i = people.length - 1; min <= i; i--) {
            if(people[min] + people[i] <= limit) {
                min++;
            }
            
            answer++;
        }
        
        return answer;
    }
}
