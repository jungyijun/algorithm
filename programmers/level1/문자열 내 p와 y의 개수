class Solution {
    boolean solution(String s) {
        boolean answer = true;
        
        // 매개변수 s를 소문자로 변환한다.
        String newString = s.toLowerCase();
        
        // Java8 Stream을 이용해 문자열에 포함하는 문자의 개수를 반환받는다.
        long pCount = getCount(newString, 'p');
        long yCount = getCount(newString, 'y');
        
        answer = ((pCount == yCount) || (pCount == 0 && yCount == 0)) ? true : false;
        
        return answer;
    }
    
    // Stream의 char()는 문자열을 문자 개별로 출력한다.
    // Stream의 filter()는 Stream내 요소에 대해 필터링을 하는 메소드이다.
    // Stream의 count()는 특정 문자가 포함된 Stream의 개수를 반환한다.
    public long getCount(String str, char ch) {
        return str.chars().filter(c -> c == ch).count();
    }
}
