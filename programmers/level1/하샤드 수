class Solution {
    public boolean solution(int x) {
        boolean answer = true;
        
        int sum = 0;
        
        String [] xString = String.format("%s", x).split("");
        
        for(int i = 0; i < xString.length; i++) {
            sum += Integer.parseInt(xString[i]);
        }
        
        if(x % sum == 0) {
            answer = true;
        } else {
            answer = false;
        }
        
        return answer;
    }
}
