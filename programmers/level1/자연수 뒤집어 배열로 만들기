import java.lang.*;

class Solution {
    public int[] solution(long n) {
        int[] answer;
        
        // parameter n을 String으로 변환 후 StringBuilder로 인스턴스화 한다.
        StringBuilder sb = new StringBuilder(String.format("%s", n));
        
        // StringBuilder의 reverse()를 이용해 뒤집는다.
        sb.reverse();
        
        // StringBuilder의 길이만큼 초기화
        answer = new int[sb.length()];

        // Character.getNumericValue()를 이용해 char를 int로 변환하여 answer[i]에 담는다.
        for(int i = 0; i < sb.length(); i++) {
            answer[i] = Character.getNumericValue(sb.charAt(i));
        }
        
        return answer;
    }
}
