class Solution {
    public int solution(int num) {
        long temp = num;
        int cnt = 0;
        
        while(temp != 1) {
            if(cnt == 500) {
                cnt = -1;
                break;
            }
            
            if(temp % 2 == 0) {
                temp /= 2;
            } else {
                temp = temp * 3 + 1;
            }

            cnt++;   
        }

        return cnt;
    }
}
