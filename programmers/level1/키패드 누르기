import java.lang.*;

class Solution {
    public String solution(int[] numbers, String hand) {
        StringBuilder sb = new StringBuilder();
        int lastLeftHand = 10;
        int lastRightHand = 12;
    
        for(int i = 0; i < numbers.length; i++) {
            if(numbers[i] == 1 || numbers[i] == 4 || numbers[i] == 7) {
                sb.append("L");
                lastLeftHand = numbers[i];
            } else if(numbers[i] == 3 || numbers[i] == 6 || numbers[i] == 9) {
                sb.append("R");
                lastRightHand = numbers[i];
            } else {
                if(numbers[i] == 0) {
                    numbers[i] = 11;    
                }
                
                int tempLastLeftHand = getPosition(lastLeftHand, numbers[i]);
                int tempLastRightHand = getPosition(lastRightHand, numbers[i]);
                
                if(tempLastLeftHand == tempLastRightHand) {
                    if(hand.equals("right")) {
                        sb.append("R");
                        lastRightHand = numbers[i];
                    } else {
                        sb.append("L");
                        lastLeftHand = numbers[i];
                    }
                } else if(tempLastLeftHand > tempLastRightHand) {
                    sb.append("R");
                    lastRightHand = numbers[i];
                } else {
                    sb.append("L");
                    lastLeftHand = numbers[i];
                }
            }
        }

        return sb.toString();
    }
    
    public int getPosition(int index, int number) {
		int x = (index - 1) / 3;
		int y = (index - 1) % 3;
		int numberX = number / 3;
		int numberY = 1;

		return Math.abs(x - numberX) + Math.abs(y - numberY);
	}
}
